<script>
$(function() {
	$('#slider').cycle({
		fx: 'fade', //'uncover',
		sync: false,
		speed: 1000,
		//pause: true,
		pager: '#slide-nav',
		after: function(a) {
			var html = '\
				<a href="' + $('#slider li:visible img').data('url') + '">' + $('#slider li:visible img').data('title') + '</a>\
				<p>' + $('#slider li:visible img').data('desc') + '</p>\
			';
			
			$('#slide-caption').html(html);
		}
	});
});

var image = document.getElementsByTagName('img');
for (var i = 0; i < image.length; i++) {
	image[i].src = image[i].src + '?ts=' + new Date().getTime();
}
</script>
